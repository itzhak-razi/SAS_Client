<?xml version="1.0" encoding="utf-8"?>

    
<AbsoluteLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:background="@drawable/background"
	xmlns:android="http://schemas.android.com/apk/res/android" >
	
	<ScrollView 
	    android:id="@+id/widget54"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent" >
	
	    <LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" >
			<TextView
			    android:id="@+id/obtain_the_location"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center"
			    android:text="Obtaining Location and Sending SMS"
			    android:textAppearance="?android:attr/textAppearanceMedium" />
			<TextView
			      android:layout_width="wrap_content"
			      android:layout_height="wrap_content"
			      android:layout_gravity="center"
			      android:text=" "/>
			
			<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal" >
		        <ImageView
		            android:id="@+id/globus"
		            android:layout_width="78dp"
		            android:layout_height="73dp"
		            android:layout_alignParentLeft="true"
		            android:layout_centerVertical="true"
		            android:layout_marginLeft="10dip"
		            android:background="@drawable/globus_600_580" />
		        <ImageView
		            android:id="@+id/imgLocation"
		            android:layout_width="wrap_content"
		            android:layout_height="fill_parent"
		            android:gravity="center_vertical"
		            android:src="@drawable/x_or_v" />
		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="match_parent"
		            android:layout_weight="0.80"
		            android:orientation="vertical" >
		  			<TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:gravity="center_vertical"
		                android:text=" " />
		            <TextView
		                android:id="@+id/getting_location_txt"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:gravity="center_vertical"
		                android:text="Getting location please wait..." />
		            <ProgressBar
		                android:id="@+id/progressbar"
		                style="?android:attr/progressBarStyleHorizontal"
		                android:layout_width="178dp"
		                android:layout_height="wrap_content"
		                android:gravity="center" />
   				</LinearLayout>
    		</LinearLayout>

	    	<LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical" >
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:gravity="center_vertical"
		            android:text="               " />
	   		</LinearLayout>
	    
	   		<LinearLayout
			    android:orientation="horizontal"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content">
		        <ImageView
		            android:id="@+id/sms"
		            android:layout_width="50dp"
		            android:layout_height="50dp"
		            android:layout_marginLeft="25dip"
		            android:background="@drawable/sms" />
		        <TextView
		            android:layout_width="14dp"
		            android:layout_height="match_parent"
		            android:gravity="center_vertical"
		            android:text="               " />
		        <ImageView
		            android:id="@+id/img_sms"
		            android:layout_width="wrap_content"
		            android:layout_height="73dp"
		            android:gravity="center_vertical"
		            android:src="@drawable/x_or_v" />
		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="match_parent"
		            android:layout_weight="0.80"
		            android:orientation="vertical" >
					<TextView
					      android:id="@+id/empty_line"
					      android:layout_width="wrap_content"
					      android:layout_height="wrap_content"
					      android:gravity="center_vertical"
					      android:text="                     " />
					<TextView
					    android:id="@+id/sending_sms_txt"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:gravity="center_vertical"
					    android:text="Sending SMS..." />
	   			</LinearLayout>
	    	</LinearLayout>

			<LinearLayout
			     android:id="@+id/linearLayout1"
			     android:layout_width="match_parent"
			     android:layout_height="wrap_content" >
			     <TextView
			         android:id="@+id/location_info"
			         android:layout_width="wrap_content"
			         android:layout_height="wrap_content"
			         android:text=""
			         android:textAppearance="?android:attr/textAppearanceMedium" />
	   		</LinearLayout>
   
			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical" >
			    <Button
			     android:id="@+id/back_to_main_screen"
			     android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			     android:layout_gravity="center"
			     android:onClick="backButtonHandler"
			     android:text="Back to Main Screen"
			     android:textSize="20px"
			     android:textStyle="bold" />
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</AbsoluteLayout>

    
    